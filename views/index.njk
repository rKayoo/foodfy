{% extends 'layout.njk' %}

{% block head%}
    <link rel="stylesheet" href="/styles/description.css">
    <link rel="stylesheet" href="/styles/recipes.css">
{% endblock %}

{% block content %}
<div class="container">
  <div class="main-text">
    <h3>As melhores receitas</h3>
    <p>
      Aprenda a construir os melhores pratos com receitas
      criadas por profissionais do mundo inteiro.
    </p>
  </div>
  <div id="chef">
    <img src="/assets/chef.png" alt="chef">
  </div>
</div>

<h3>Mais acessadas</h3>

<section class="recipes">
  {% for recipe in recipes%}
  <div class="recipe" id="{{recipe.id}}">
    <img src="{{recipe.image}}" alt="{{recipe.title}}">
    <h5>{{recipe.title}}</h5>
    <p>por {{recipe.author}}</p>
  </div>
  {% endfor %}
</section>

<script src="scripts.js"></script>

{% endblock %}