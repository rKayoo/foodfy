{% extends "layout.njk" %}

{% block head%}
    <title>Foodfy</title>
{% endblock %}

{% block content %}

<h3>Gerenciar Chefs</h3>

<section class="menu-chefs">
  {% for chef in chefs%}
  <div class="menu-item chef" id="{{chef.id}}">
    <img 
      src="{{chef.avatar_url}}" 
      alt="{{chef.name}}"
      class="chef-image"
    >
    <div class="item-information chef">
      <h5>{{chef.name}}</h5>
      <a href="/admin/chefs/{{chef.id}}">{{chef.total_recipes}} receita(s)</a>
    </div>
  </div>
  {% endfor %}
</section>

{% endblock %}