{% extends "chefs/layout.njk" %}

{% block head %}
  <title>Foodfy - {{chef.title}}</title>
{% endblock %}

{% block content %}
<div class="inline">
    <h3>Chef: {{ chef.name }}</h3>
    <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar Chef</a>
  </div>

<div class="presentation chef">
  <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
  <h2>{{chef.name}}</h5>
  <p>{{ chef.total_recipes }} receita(s)</p>
</div>

<h4>Receitas</h4>

<section class="menu">
    {% for recipe in recipes %}
    <div class="menu-item" id="{{recipe.id}}">
      <div class="item-image">
        <img src="{{recipe.image}}" alt="{{recipe.title}}">
      </div>
      <div class="item-information">
        <h5>{{recipe.title}}</h5>
        <p>por {{ chef.name }}</p>
        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
      </div>
    </div> 
    {% endfor %}
</section>

{% endblock %}